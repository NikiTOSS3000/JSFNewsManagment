<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <application>
        <resource-bundle>
            <base-name>com.epam.jsf.resources.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>list</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/faces/list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>view</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/faces/view.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/faces/add.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
